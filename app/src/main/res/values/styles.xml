        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
    </style>

    <!-- Night / dark  Mode theme. -->
    <style name="darktheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#212121</item>
        <item name="colorBackground">#4d4d4d</item>
        <!--<item name="paleRed">#7b2f37</item>-->
        <!--<item name="paleGreen">#447c3f</item>-->
        <item name="paleRed">#fc5565</item>
        <item name="paleGreen">#7eff72</item>
        <item name="colorWhite">#fff</item>

        <item name="colorText">#fff</item>
        <item name="colorGradient">#D81B60</item>
        <item name="colorTextChanging">#fff</item> <!--color text changing 2 is in colors-->
        <item name="colorBlock">#161616</item>
        <item name="colorTextSecondary">#fffc7c</item>
        <item name="colorTextTransperent">#fff</item>


        <item name="colorButton">#c0c0c0</item>
        <item name="colorTextInverse">#000000</item>

        <item name="headerMenu">@drawable/scheduler_black</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
    </style>

    <!--Yellow theme-->
    <style name="yellowTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#49B358</item>
        <item name="colorBackground">#D0DB97</item>
        <item name="paleRed">#fc5565</item>
        <item name="paleGreen">#3d613a</item>
        <item name="colorWhite">#fff</item>
        <item name="colorText">#181D27</item>
        <item name="colorGradient">#D81B60</item>
        <item name="colorTextChanging">#FFF</item>
        <item name="headerMenu">@drawable/scheduler_header</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
    </style>
    <!--Fade animation between activities-->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation" >@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>

    </style>

    <style name="MyActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <!--<item name="android:textColor">@color/colorText</item>-->
    </style>


    <!--Other-->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
