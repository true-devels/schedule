<resources>
    <!--THEME MODE-->

    <!-- Base application theme. -->
    <!-- Light/Day Mode theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#7646ff</item>
        <!--<item name="colorPrimary">#46ffe9</item>-->
        <item name="colorBackground">#e4e4e4</item>
        <!--<item name="paleRed">#fc5565</item>-->
        <!--<item name="paleGreen">#72d169</item>-->
        <item name="paleRed">#6c101a</item>
        <item name="paleGreen">#186911</item>
        <item name="colorWhite">#fff</item>

        <item name="colorText">#000</item>
        <item name="colorGradient">#D81B60</item>
        <item name="colorTextChanging">#000</item>
        <item name="colorBlock">#fff</item>
        <item name="colorTextSecondary">#747200</item>
        <item name="colorTextTransperent">#fff</item>

        <item name="colorButton">#404040</item>
